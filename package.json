{
  "name": "shark-translate",
  "displayName": "SharkTranslate",
  "description": "中文转shark",
  "version": "0.0.9",
  "publisher": "zs-liu",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sharkTranslate.oneSharkReplace",
    "onCommand:sharkTranslate.allSharkReplace",
    "onCommand:sharkTranslate.exportChineseByPage",
    "onCommand:sharkTranslate.exportChineseByPageId"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sharkTranslate.oneSharkReplace",
        "title": "oneSharkReplace"
      },
      {
        "command": "sharkTranslate.allSharkReplace",
        "title": "allSharkReplace"
      },
      {
        "command": "sharkTranslate.exportChineseByPageId",
        "title": "导出项目中的中文到Excel(默认扫描src目录)"
      },
      {
        "command": "sharkTranslate.exportChineseByPage",
        "title": "导出当前文件/文件夹中的中文到Excel"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sharkTranslate.oneSharkReplace",
          "title": "oneSharkReplace",
          "group": "navigation",
          "when": "editorTextFocus && !editorReadonly"
        },
        {
          "command": "sharkTranslate.allSharkReplace",
          "title": "allSharkReplace",
          "group": "navigation",
          "when": "editorTextFocus && !editorReadonly"
        }
      ],
      "explorer/context": [
        {
          "command": "sharkTranslate.exportChineseByPageId",
          "title": "导出项目中的中文到Excel(默认扫描src目录)",
          "group": "navigation@1"
        },
        {
          "command": "sharkTranslate.exportChineseByPage",
          "title": "导出当前文件/文件夹中的中文到Excel",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "SharkTranslate",
      "properties": {
        "sharkTranslate.sharkStoreVar": {
          "type": "string",
          "default": "language",
          "description": "shark存储变量名"
        },
        "sharkTranslate.sharkPrefix": {
          "type": "array",
          "default": [],
          "description": "配置页面shark前缀，用于替换时快捷去除通用前缀"
        },
        "sharkTranslate.scanSrcPath": {
          "type": "string",
          "default": "src",
          "description": "扫描中文的源目录路径，相对于项目根目录，默认为 src"
        },
        "sharkTranslate.scanExcludePatterns": {
          "type": "array",
          "default": [],
          "description": "扫描时排除的文件或文件夹（glob 模式），例如: [\"**/components/**\", \"**/utils/helper.ts\"]（仅对 exportChineseByPageId 命令生效）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "exceljs": "^4.3.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  }
}